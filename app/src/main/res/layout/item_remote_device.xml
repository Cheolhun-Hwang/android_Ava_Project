<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginTop="7.5sp"
        android:layout_marginBottom="7.5sp"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:background="@drawable/round_white_box"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75sp">
       <ImageView
           android:id="@+id/item_remote_flag"
           android:tint="@color/blue_600"
           android:scaleType="fitCenter"
           android:src="@drawable/ic_bluetooth"
           android:layout_width="64sp"
           android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:ellipsize="end"
            android:id="@+id/item_remote_device_name"
            android:textSize="15sp"
            android:text="Device Model Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>