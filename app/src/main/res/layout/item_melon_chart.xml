<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="0.5sp"
        android:layout_marginBottom="0.5sp"
        android:layout_marginLeft="7sp"
        android:layout_marginRight="7sp"
        android:background="@drawable/round_white_box"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100sp">
        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/item_melon_chart_image"
            android:scaleType="centerCrop"
            android:src="@drawable/noimage"
            app:sriv_left_top_corner_radius="15sp"
            app:sriv_left_bottom_corner_radius="15sp"
            android:layout_weight="1"
            android:layout_width="200sp"
            android:layout_height="match_parent" />
        <LinearLayout
            android:gravity="center"
            android:padding="7.5sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:ellipsize="end"
                android:id="@+id/item_melon_chart_rank_and_name"
                android:textSize="16sp"
                android:text="1. Title"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:maxLength="35"
                android:ellipsize="end"
                android:gravity="center"
                android:id="@+id/item_melon_chart_artist"
                android:layout_marginLeft="7sp"
                android:textSize="11sp"
                android:text="artist"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>