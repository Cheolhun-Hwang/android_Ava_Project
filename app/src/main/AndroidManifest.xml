        <activity
            android:name=".NickNameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MicActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MovieChartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AvaWebViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MelonChartActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".RadioActivity"></activity>
    </application>

</manifest>